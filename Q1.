CREATE OR REPLACE TRIGGER Day_Check BEFORE INSERT OR UPDATE OR DELETE ON EMPC FOR EACH ROW 
DECLARE
    DT CHAR(20);
BEGIN
    SELECT TO_CHAR(SYSDATE, 'DAY') day INTO DT FROM dual;
    IF(DT='SUNDAY') THEN
        RAISE_APPLICATION_ERROR(-20000,'CANNOT WORK ON SUNDAY');
    ELSE
        DBMS_OUTPUT.PUT_LINE('DAY IS '||dt);
    END IF;
END;
/

